{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",    
    "options": {
        "cwd": "${workspaceRoot}/build",
        "env": {
            "USD_ROOT": "/home/stefaan/usd/build",            
            "PYTHONPATH": "/home/stefaan/usd/build/lib/python",
            "PXR_PLUGINPATH_NAME": "${workspaceRoot}/S3Resolver",
            "TF_DEBUG_PROBLEM": "AR_RESOLVER_INIT USD_S3_RESOLVER USD_S3_FILEFORMAT SDF_ASSET SDF_LAYER S3_DBG",
            "TF_DEBUG": "USD_S3_RESOLVER USD_S3_FILEFORMAT S3_DBG",
            "USD_S3_PROXY_HOST": "10.249.66.131",
            "USD_S3_PROXY_PORT": "80",
        }
    },
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf *",
            "problemMatcher": []
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake -G 'Unix Makefiles' ..",
            "problemMatcher": [],            
        },
        {
            "label": "make",
            "type": "shell",
            // use this to test cache
            "command": "make -j8 && ../../build/bin/usdcat ${workspaceRoot}/../example/RefExample.usda --flattenLayerStack",
            // "command": "make -j8 && ../../build/bin/usdresolve s3:hello/kitchen.usdz",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}