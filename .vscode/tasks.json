{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/build",
        "env": {
            "USD_ROOT": "${workspaceRoot}/../build",
            "BOOST_ROOT": "${workspaceRoot}/../build",
            "TBBROOT": "${workspaceRoot}/../build",
            "LIBRARY_PATH": "${workspaceRoot}/../build/lib",
            "PYTHONPATH": "${workspaceRoot}/../build/lib/python",
            "PXR_PLUGINPATH_NAME": "${workspaceRoot}/S3Resolver",
            "TF_DEBUG_OPTIONS": "AR_RESOLVER_INIT USD_S3_RESOLVER USD_S3_FILEFORMAT SDF_ASSET SDF_LAYER S3_DBG",
            "TF_DEBUG": "USD_S3_RESOLVER USD_S3_FILEFORMAT S3_DBG",
            // configure proxy to an ActiveScale system
            "USD_S3_PROXY_HOST": "10.249.66.131",
            "USD_S3_PROXY_PORT": "80",
        }
    },
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "rm -rf ./* && cmake -G 'Unix Makefiles' -v ..",
            "group": "build",
            "problemMatcher": [],
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "direct fetch from S3 - no cache",
            "type": "shell",
            "command": "rm /tmp/hello -rf; ../../build/bin/usdcat -o ../../dump.usdc s3:hello/kitchen.usdz ",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "direct fetch from S3 - with cache",
            "type": "shell",
            "command": "../../build/bin/usdcat -o ../../dump.usdc s3:hello/kitchen.usdz ",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "referenced fetch by payload from S3 - no cache",
            "type": "shell",
            "command": "rm /tmp/kitchen -rf; ../../build/bin/usdcat -o ../../dump.usdc ~/Pictures/usd/kitchen/Kitchen_set.usd --flatten",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "referenced fetch by payload from S3 - with cache",
            "type": "shell",
            "command": "../../build/bin/usdcat -o ../../dump.usdc ~/Pictures/usd/kitchen/Kitchen_set.usd --flatten",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}