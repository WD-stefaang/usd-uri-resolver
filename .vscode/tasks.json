    "version": "2.0.0",    
    "options": {
        "cwd": "${workspaceRoot}/build",
        "env": {
            "USD_ROOT": "/home/stefaan/usd/build",
            "PYTHONPATH": "/home/stefaan/usd/build/lib/python",
            "PXR_PLUGINPATH_NAME": "${workspaceRoot}/S3Resolver",
            "TF_DEBUG_PROBLEM": "AR_RESOLVER_INIT SDF_FILE_FORMAT SDF_ASSET",
            "TF_DEBUG": "AR_RESOLVER_INIT USD_S3_RESOLVER USD_S3_FILEFORMAT SDF_ASSET SDF_LAYER TRACE S3_DBG",
            "LD_LIBARY_PATH": "/home/stefaan/usd/build/lib"
        }
    },
    "tasks": [
        {
            "label": "clean",
